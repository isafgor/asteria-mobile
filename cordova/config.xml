<?xml version='1.0' encoding='utf-8'?>
<widget id="asteria.thesaftech.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>asteria.thesaftech.com</name>
    <description>
        Saftech LLC Asteria
    </description>
    <author email="contact@thesaftech.com" href="http://thesaftech.com">
        Saftech
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <allow-navigation href="http://api.asteria.space/*" />
    <access origin="*" />
    <allow-intent href="http://api.asteria.space/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
